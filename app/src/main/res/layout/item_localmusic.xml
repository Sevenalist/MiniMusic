<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    app:contentPadding="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="1dp"
    app:cardBackgroundColor="@color/pinkBackground">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/music_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:text="1"
            android:textSize="24sp"/>
        <TextView
            android:id="@+id/songName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="歌曲名"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/music_num"
            android:singleLine="true"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/music_singer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="歌手"
            android:layout_below="@id/songName"
            android:layout_alignLeft="@id/songName"
            android:layout_marginTop="10dp"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/music_line"
            android:layout_width="2dp"
            android:layout_height="18dp"
            android:layout_toRightOf="@id/music_singer"
            android:layout_alignTop="@id/music_singer"
            android:background="#3F000000"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/music_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="专辑名称"
            android:layout_toRightOf="@id/music_line"
            android:layout_alignTop="@id/music_line"
            android:textSize="14sp"
            android:singleLine="true"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/music_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/music_singer"
            android:layout_alignParentRight="true"
            android:text="时长"
            android:textSize="14sp"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>